{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["bun"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*"],
      "tailwind.config": ["./tailwind.config.js"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
